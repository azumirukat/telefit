<main class="container mx-auto p-4 main-section">
    <section class="mb-8">
      <h2 class="text-2xl mb-4">Update Your Information</h2>
      <form action="/settings/update" method="POST">
        <div class="mb-4">
          <label for="username" class="block text-gray-700 mb-2">Username:</label>
          <input type="text" id="username" name="username" value="<%= user.username %>" class="p-2 border border-gray-300 rounded" required>
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-700 mb-2">Email:</label>
          <input type="email" id="email" name="email" value="<%= user.email %>" class="p-2 border border-gray-300 rounded" required>
        </div>
        <div class="mb-4">
          <label for="password" class="block text-gray-700 mb-2">New Password:</label>
          <input type="password" id="password" name="password" class="p-2 border border-gray-300 rounded">
          <small>Leave blank to keep your current password</small>
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Update Information</button>
      </form>
    </section>

    <section class="mb-8">
      <h2 class="text-2xl mb-4">Telegram Integration</h2>
      <% if (user.telegramId) { %>
        <p>Telegram is currently linked to your account.</p>
        <form action="/settings/unlink-telegram" method="POST">
          <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Unlink Telegram</button>
        </form>
      <% } else { %>
        <p>Telegram is not linked to your account.</p>
        <a href="https://t.me/<%= process.env.TELEGRAM_BOT_USERNAME %>?start=link" class="bg-blue-500 text-white px-4 py-2 rounded">Link Telegram</a>
      <% } %>
    </section>